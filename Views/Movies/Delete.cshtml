@{
}

@model MvcMovie.Models.Movie

<h2>Eliminar</h2>

<div>
    <h4>Estás seguro que deseas eliminar este registro?</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Id:
        </dt>
        <dd class="col-sm-10">
            @Model.Id
        </dd>
        <dt class="col-sm-2">
            Título:
        </dt>
        <dd class="col-sm-10">
            @Model.Titulo
        </dd>
        <!-- Agrega aquí más propiedades del modelo que deseas mostrar -->
    </dl>
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger">
            <i class="bi bi-trash3-fill">Eliminar</i>
        </button>
        <a class="btn btn-outline-primary" asp-action="Index"><i class="bi bi-reply-fill">Atras</i></a>
    </form>
</div>